'use client';

import React, { useState, useCallback, useMemo } from 'react';
import { cn } from '@/lib/utils';

interface PositionSelectProps {
  value: string[];
  onChange: (positions: string[]) => void;
  type?: 'hero' | 'villain';
  label?: string;
}

interface Position {
  code: string;
  name: string;
  description: string;
  type: 'early' | 'middle' | 'late';
  angle: number; // For circular layout
  color: string;
  bgColor: string;
}

const POSITIONS: Position[] = [
  {
    code: 'UTG',
    name: 'Under the Gun',
    description: 'First to act preflop',
    type: 'early',
    angle: 0,
    color: 'text-white',
    bgColor: 'bg-red-500 hover:bg-red-600',
  },
  {
    code: 'UTG+1',
    name: 'UTG + 1',
    description: 'Second to act',
    type: 'early',
    angle: 51.43,
    color: 'text-white',
    bgColor: 'bg-red-500 hover:bg-red-600',
  },
  {
    code: 'UTG+2',
    name: 'UTG + 2',
    description: 'Third to act',
    type: 'early',
    angle: 102.86,
    color: 'text-white',
    bgColor: 'bg-red-500 hover:bg-red-600',
  },
  {
    code: 'MP',
    name: 'Middle Position',
    description: 'Middle position',
    type: 'middle',
    angle: 154.29,
    color: 'text-white',
    bgColor: 'bg-yellow-500 hover:bg-yellow-600',
  },
  {
    code: 'CO',
    name: 'Cutoff',
    description: 'One seat before button',
    type: 'late',
    angle: 205.71,
    color: 'text-white',
    bgColor: 'bg-green-500 hover:bg-green-600',
  },
  {
    code: 'BTN',
    name: 'Button',
    description: 'Last to act postflop',
    type: 'late',
    angle: 257.14,
    color: 'text-white',
    bgColor: 'bg-green-600 hover:bg-green-700',
  },
  {
    code: 'SB',
    name: 'Small Blind',
    description: 'Posts small blind',
    type: 'late',
    angle: 308.57,
    color: 'text-white',
    bgColor: 'bg-blue-500 hover:bg-blue-600',
  },
  {
    code: 'BB',
    name: 'Big Blind',
    description: 'Posts big blind',
    type: 'late',
    angle: 360,
    color: 'text-white',
    bgColor: 'bg-blue-600 hover:bg-blue-700',
  },
];

type LayoutView = 'table' | 'list';

export function PositionSelect({
  value,
  onChange,
  type = 'hero',
  label = 'Position',
}: PositionSelectProps) {
  const [layoutView, setLayoutView] = useState<LayoutView>('table');

  const handleToggle = useCallback(
    (position: string) => {
      onChange(
        value.includes(position)
          ? value.filter((p) => p !== position)
          : [...value, position],
      );
    },
    [value, onChange],
  );

  const handleSelectAll = useCallback(() => {
    onChange(POSITIONS.map((p) => p.code));
  }, [onChange]);

  const handleClearAll = useCallback(() => {
    onChange([]);
  }, [onChange]);

  const positionsByType = useMemo(() => {
    return {
      early: POSITIONS.filter((p) => p.type === 'early'),
      middle: POSITIONS.filter((p) => p.type === 'middle'),
      late: POSITIONS.filter((p) => p.type === 'late'),
    };
  }, []);

  const typeColor = type === 'hero' ? 'text-blue-600' : 'text-red-600';
  const typeBorder = type === 'hero' ? 'border-blue-500' : 'border-red-500';

  return (
    <div className="space-y-4">
      {/* Label */}
      <div className="flex items-center justify-between">
        <label className={cn('block text-sm font-semibold', typeColor)} id="position-label">
          {label}
          {value.length > 0 && (
            <span className="ml-2 text-xs font-normal text-gray-500">
              ({value.length}/8)
            </span>
          )}
        </label>

        {/* View Toggle */}
        <div className="inline-flex gap-1 p-1 bg-gray-100 rounded-lg">
          <button
            onClick={() => setLayoutView('table')}
            className={cn(
              'px-3 py-1 text-xs font-medium rounded transition-colors focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500',
              layoutView === 'table'
                ? 'bg-white text-gray-900 shadow-sm'
                : 'text-gray-600 hover:text-gray-900',
            )}
            aria-pressed={layoutView === 'table'}
            aria-label="Circular table view"
          >
            Table
          </button>
          <button
            onClick={() => setLayoutView('list')}
            className={cn(
              'px-3 py-1 text-xs font-medium rounded transition-colors focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500',
              layoutView === 'list'
                ? 'bg-white text-gray-900 shadow-sm'
                : 'text-gray-600 hover:text-gray-900',
            )}
            aria-pressed={layoutView === 'list'}
            aria-label="List view"
          >
            List
          </button>
        </div>
      </div>

      {layoutView === 'table' ? (
        // Circular Table View
        <div className="flex flex-col items-center justify-center py-8">
          {/* Circular Layout */}
          <div className="relative w-80 h-80">
            {/* Table Center */}
            <div className="absolute inset-1/2 transform -translate-x-1/2 -translate-y-1/2 w-16 h-16 bg-gradient-to-b from-green-100 to-green-50 rounded-full border-2 border-green-500 shadow-lg flex items-center justify-center">
              <span className="text-xs font-semibold text-green-700">TABLE</span>
            </div>

            {/* Positions */}
            {POSITIONS.map((position) => {
              const isSelected = value.includes(position.code);
              const radius = 120;
              const angleRad = (position.angle * Math.PI) / 180;
              const x = radius * Math.sin(angleRad);
              const y = -radius * Math.cos(angleRad);

              return (
                <button
                  key={position.code}
                  onClick={() => handleToggle(position.code)}
                  className={cn(
                    'absolute w-16 h-16 rounded-full font-bold transition-all focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 flex flex-col items-center justify-center text-sm',
                    isSelected
                      ? `${position.bgColor} ${position.color} ring-2 ring-white shadow-lg`
                      : `${position.bgColor} ${position.color} opacity-70 hover:opacity-90`,
                  )}
                  style={{
                    left: '50%',
                    top: '50%',
                    transform: `translate(calc(-50% + ${x}px), calc(-50% + ${y}px))`,
                  }}
                  aria-label={`${position.name}${isSelected ? ', selected' : ''}`}
                  title={position.description}
                  aria-pressed={isSelected}
                >
                  <span>{position.code}</span>
                </button>
              );
            })}
          </div>

          {/* Legend */}
          <div className="mt-8 flex gap-6 text-xs font-medium">
            <div className="flex items-center gap-2">
              <div className="w-4 h-4 rounded-full bg-red-500" aria-hidden="true" />
              <span>Early (UTG)</span>
            </div>
            <div className="flex items-center gap-2">
              <div className="w-4 h-4 rounded-full bg-yellow-500" aria-hidden="true" />
              <span>Middle</span>
            </div>
            <div className="flex items-center gap-2">
              <div className="w-4 h-4 rounded-full bg-green-500" aria-hidden="true" />
              <span>Late (BTN)</span>
            </div>
          </div>
        </div>
      ) : (
        // List View
        <div className="space-y-4">
          {/* Early Positions */}
          <div className="space-y-2">
            <h3 className="text-xs font-semibold text-gray-600 uppercase tracking-wider">
              Early Position (UTG)
            </h3>
            <div className="grid grid-cols-2 gap-2 sm:grid-cols-3">
              {positionsByType.early.map((position) => {
                const isSelected = value.includes(position.code);
                return (
                  <button
                    key={position.code}
                    onClick={() => handleToggle(position.code)}
                    className={cn(
                      'p-3 rounded-lg font-semibold text-sm transition-all focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 text-center',
                      isSelected
                        ? 'bg-blue-500 text-white shadow-md'
                        : 'bg-red-50 text-red-700 border-2 border-red-300 hover:bg-red-100',
                    )}
                    aria-label={position.name + (isSelected ? ', selected' : '')}
                    aria-pressed={isSelected}
                    title={position.description}
                  >
                    {position.code}
                  </button>
                );
              })}
            </div>
          </div>

          {/* Middle Positions */}
          <div className="space-y-2">
            <h3 className="text-xs font-semibold text-gray-600 uppercase tracking-wider">
              Middle Position
            </h3>
            <div className="grid grid-cols-2 gap-2 sm:grid-cols-3">
              {positionsByType.middle.map((position) => {
                const isSelected = value.includes(position.code);
                return (
                  <button
                    key={position.code}
                    onClick={() => handleToggle(position.code)}
                    className={cn(
                      'p-3 rounded-lg font-semibold text-sm transition-all focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 text-center',
                      isSelected
                        ? 'bg-blue-500 text-white shadow-md'
                        : 'bg-yellow-50 text-yellow-700 border-2 border-yellow-300 hover:bg-yellow-100',
                    )}
                    aria-label={position.name + (isSelected ? ', selected' : '')}
                    aria-pressed={isSelected}
                    title={position.description}
                  >
                    {position.code}
                  </button>
                );
              })}
            </div>
          </div>

          {/* Late Positions */}
          <div className="space-y-2">
            <h3 className="text-xs font-semibold text-gray-600 uppercase tracking-wider">
              Late Position
            </h3>
            <div className="grid grid-cols-2 gap-2 sm:grid-cols-3">
              {positionsByType.late.map((position) => {
                const isSelected = value.includes(position.code);
                return (
                  <button
                    key={position.code}
                    onClick={() => handleToggle(position.code)}
                    className={cn(
                      'p-3 rounded-lg font-semibold text-sm transition-all focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 text-center',
                      isSelected
                        ? 'bg-blue-500 text-white shadow-md'
                        : 'bg-green-50 text-green-700 border-2 border-green-300 hover:bg-green-100',
                    )}
                    aria-label={position.name + (isSelected ? ', selected' : '')}
                    aria-pressed={isSelected}
                    title={position.description}
                  >
                    {position.code}
                  </button>
                );
              })}
            </div>
          </div>
        </div>
      )}

      {/* Control Buttons */}
      <div className="flex gap-2 pt-4 border-t border-gray-200">
        <button
          onClick={handleSelectAll}
          className="flex-1 px-4 py-2 text-sm font-medium text-blue-600 hover:bg-blue-50 rounded-lg border border-blue-300 transition-colors focus:outline-none focus:ring-2 focus:ring-blue-500"
          aria-label="Select all positions"
        >
          Select All
        </button>
        {value.length > 0 && (
          <button
            onClick={handleClearAll}
            className="flex-1 px-4 py-2 text-sm font-medium text-red-600 hover:bg-red-50 rounded-lg border border-red-300 transition-colors focus:outline-none focus:ring-2 focus:ring-red-500"
            aria-label="Clear all selections"
          >
            Clear All
          </button>
        )}
      </div>

      {/* Selected Summary */}
      {value.length > 0 && (
        <div className={cn(
          'p-3 rounded-lg border-2 border-dashed',
          typeBorder,
          type === 'hero' ? 'bg-blue-50' : 'bg-red-50',
        )}>
          <p className="text-sm font-medium text-gray-900">
            Selected: {value.join(', ')}
          </p>
        </div>
      )}

      {/* Help Text */}
      <p className="text-xs text-gray-500">
        Click positions to toggle selection â€¢ Early (red) vs Late (green) positioning affects strategy
      </p>
    </div>
  );
}
